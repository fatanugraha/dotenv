// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "ui_font_size": 13,
  "buffer_font_size": 10,
  "buffer_font_family": "Menlo",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },

  // vim
  "vim_mode": true,

  // reduce ui clutter
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "indent_guides": {
    "active_line_width": 2
  },
  "title_bar": {
    "show": "hide_in_full_screen",
    "show_sign_in": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "button": false
  },
  "collaboration_panel": {
    "dock": "right",
    "button": false
  },
  "project_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right",
    "button": false
  },
  "search": {
    "button": false
  },
  "diagnostics": {
    "button": false
  },
  "global_lsp_settings": {
    "button": false
  },
  "status_bar": {
    "active_language_button": false,
    "cursor_position_button": true
  },
  "show_edit_predictions": false
}
