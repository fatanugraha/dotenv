{
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.fontFamily": "JetBrains Mono",
    "editor.rulers": [
        120
    ],
    // declutter ui
    "breadcrumbs.enabled": false,
    "chat.disableAIFeatures": true,
    "editor.minimap.enabled": false,
    "workbench.navigationControl.enabled": false,
    "window.title": "${activeEditorMedium}${separator}${rootName}${separator}${profileName}",
    "window.titleBarStyle": "native",
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.startupEditor": "none",
    // decultter-ui -- but only required in linux
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",
    "window.menuBarVisibility": "hidden",
    // git
    "git.blame.editorDecoration.enabled": true,
    "git.blame.editorDecoration.template": "${authorDateAgo} ${authorEmail} | ${subject}",
    // vscodevim
    "vim.leader": " ",
    "vim.easymotion": true,
    "vim.surround": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "g",
                "I"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "g",
                "B"
            ],
            "commands": [
                "git.blame.toggleEditorDecoration"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "/"
            ],
            "commands": [
                {
                    "command": "actions.find"
                },
            ],
            "silent": true
        },
        {
            "before": [
                ":",
                "s",
                "/"
            ],
            "commands": [
                {
                    "command": "editor.action.startFindReplaceAction"
                }
            ],
            "silent": true
        },
        {
            "before": [
                "<C-u>"
            ],
            "after": [
                "<C-u>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "<C-d>"
            ],
            "after": [
                "<C-d>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "s"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "s"
            ]
        },
        {
            "before": [
                "<C-o>"
            ],
            "commands": [
                {
                    "command": "workbench.action.navigateBack"
                }
            ]
        },
        {
            "before": [
                "<C-i>"
            ],
            "commands": [
                {
                    "command": "workbench.action.navigateForward"
                }
            ]
        }
    ],
    // go
    "go.formatTool": "gofumpt",
    "go.coverOnSingleTestFile": true,
    "go.coverOnSingleTest": true,
    "go.inlayHints.parameterNames": true,
}
